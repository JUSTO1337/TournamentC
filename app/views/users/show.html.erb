<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
                        <p>Name: <%= @user.name %></p>
                        <p>Email: <%= @user.email %></p>
                        <p>Registered: <%= @user.created_at.strftime("%m/%d/%Y") %></p>
                        <p><%= link_to "Edit", edit_user_path(current_user) %></p>
            	</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.tournaments.any? %>
		<h3>Tournaments (<%= @user.tournaments.count %>)</h3>
		<ol class="tournaments">
			<%= render @tournaments %>
		</ol>
		<%= will_paginate @tournaments %>
		<% end %>
	</div>

</div>