<% if @tournament.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-error">
    The form contains <%= pluralize(@tournament.errors.count, "error") %>.
  </div>
  <ul>
  <% @tournament.errors.full_messages.each do |msg| %>
  <li>* <%= msg %></li>
  <% end %>
</ul>
</div>
<% end %>